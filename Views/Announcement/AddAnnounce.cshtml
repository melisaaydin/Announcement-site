@model Announcement

<div class="display-6">
    Add Announcement
</div>
<form method="post" action="/announcement/addedannouncement">
    <div class="form-group my-2" asp-validation-summary="All">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" name="name" class="form-control">
    </div>
    <div class="form-group my-2">
        <label asp-for="Surname">Surname</label>
        <input asp-for="Surname" type="text" name="surname" class="form-control">
    </div>
    <div class="form-group my-2">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" type="text" name="title" class="form-control">
    </div>
    <div class="form-group my-2">
        <label asp-for="Text">Announcement Text</label>
        <input asp-for="Text" type="text" class="form-control">
    </div>


    <div>
        <button class="btn btn-primary" type="submit">Publish</button>
    </div>
</form>